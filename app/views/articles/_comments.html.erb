<div class="product-reviews">
    <% @comments.each do |comment| %>
        
            <p><strong><%= comment.user.first_name %></strong> <small><em style="float:right;"><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
           
            <p><%= comment.body %>
            <% if signed_in? && current_user.admin? %>
              <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, article_comment_path(comment.article, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>  
            </p>
            <hr>
    <% end %>
</div>